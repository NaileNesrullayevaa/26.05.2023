@using Delicious.Models
@model TeamEditVM
<div class="card">
    <div class="card-body">
        <form class="form-horizontal form-material" enctype="multipart/form-data" method="post">
            <div class="form-group mb-4">
                <label class="col-md-12 p-0" asp-for="Name"></label>
                <div class="col-md-12 border-bottom p-0">
                    <input asp-for="Name" placeholder="Name"
                           class="form-control p-0 border-0">
                    <span asp-validation-for="Name"></span>
                </div>
            </div>
            <div class="form-group mb-4">
                <label class="col-md-12 p-0" asp-for="Surname"></label>
                <div class="col-md-12 border-bottom p-0">
                    <input asp-for="Surname" placeholder="Surname"
                           class="form-control p-0 border-0">
                    <span asp-validation-for="Surname"></span>
                </div>
            </div>
            <div class="form-group mb-4">
                <label class="col-md-12 p-0" asp-for="Image"></label>
                <div class="col-md-12 border-bottom p-0">
                    <input asp-for="Image" placeholder="Image"
                           class="form-control p-0 border-0">
                    <span asp-validation-for="Image"></span>
                </div>
            </div>

            <div class="form-group mb-4">
                <label class="col-sm-12">Select Country</label>

                <div class="col-sm-12 border-bottom">
                    <select class="form-select shadow-none p-0 border-0 form-control-line" asp-for="WorkId">
                        @foreach (Work work in Model.Works)
                        {
                            <option value="@work.Id">@work.Name</option>

                        }

                    </select>
                </div>
            </div>
            <div class="form-group mb-4">
                <div class="col-sm-12">
                    <button class="btn btn-success" type="submit">Edit</button>
                </div>
            </div>
        </form>
    </div>
</div>

