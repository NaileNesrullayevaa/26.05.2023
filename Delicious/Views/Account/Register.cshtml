
@model RegisterVM
<div class="card">
    <div class="card-body">
        <form class="form-horizontal form-material"  method="post">
            <div class="form-group mb-4">
                <label class="col-md-12 p-0" asp-for="Name"></label>
                <div class="col-md-12 border-bottom p-0">
                    <input asp-for="Name" placeholder="Name"
                           class="form-control p-0 border-0">
                    <span asp-validation-for="Name"></span>
                </div>
            </div>
            <div class="form-group mb-4">
                <label class="col-md-12 p-0" asp-for="Surname"></label>
                <div class="col-md-12 border-bottom p-0">
                    <input asp-for="Surname" placeholder="Surname"
                           class="form-control p-0 border-0">
                    <span asp-validation-for="Surname"></span>
                </div>
            </div>
            <div class="form-group mb-4">
                <label class="col-md-12 p-0" asp-for="UserName"></label>
                <div class="col-md-12 border-bottom p-0">
                    <input asp-for="UserName" placeholder="Username"
                           class="form-control p-0 border-0">
                    <span asp-validation-for="UserName"></span>
                </div>
            </div>
            <div class="form-group mb-4">
                <label class="col-md-12 p-0" asp-for="Email"></label>
                <div class="col-md-12 border-bottom p-0">
                    <input asp-for="Email" placeholder="Email"
                           class="form-control p-0 border-0">
                    <span asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="form-group mb-4">
                <label class="col-md-12 p-0" asp-for="Password"></label>
                <div class="col-md-12 border-bottom p-0">
                    <input asp-for="Password" placeholder="Password"
                           class="form-control p-0 border-0">
                    <span asp-validation-for="Password"></span>
                </div>
            </div>
            <div class="form-group mb-4">
                <label class="col-md-12 p-0" asp-for="ConfirmPasswprd"></label>
                <div class="col-md-12 border-bottom p-0">
                    <input asp-for="ConfirmPasswprd" placeholder="ConfirmPassword"
                           class="form-control p-0 border-0">
                    <span asp-validation-for="ConfirmPasswprd"></span>
                </div>
            </div>

            <div class="form-group mb-4">
                <div class="col-sm-12">
                    <button class="btn btn-success" type="submit">Register</button>
                </div>
            </div>
        </form>
    </div>
</div>

